<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="490dp"
        android:layout_height="411dp"
        android:layout_marginTop="20dp"
        android:baselineAligned="false"
        android:padding="2dp">

        //FILA 1

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton00"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="0"></ImageButton>

            <ImageButton
                android:id="@+id/boton01"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="1"></ImageButton>

            <ImageButton
                android:id="@+id/boton02"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="2"></ImageButton>

            <ImageButton
                android:id="@+id/boton03"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="3"></ImageButton>

        </TableRow>

        //FILA 2

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton04"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="0"></ImageButton>

            <ImageButton
                android:id="@+id/boton05"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="1"></ImageButton>

            <ImageButton
                android:id="@+id/boton06"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="2"></ImageButton>

            <ImageButton
                android:id="@+id/boton07"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="3"></ImageButton>

        </TableRow>

        //FILA 3

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton08"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="0"></ImageButton>

            <ImageButton
                android:id="@+id/boton09"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="1"></ImageButton>

            <ImageButton
                android:id="@+id/boton10"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="2"></ImageButton>

            <ImageButton
                android:id="@+id/boton11"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="3"></ImageButton>

        </TableRow>

        //FILA 4

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/boton12"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="0"></ImageButton>

            <ImageButton
                android:id="@+id/boton13"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="1"></ImageButton>

            <ImageButton
                android:id="@+id/boton14"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="2"></ImageButton>

            <ImageButton
                android:id="@+id/boton15"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="3"></ImageButton>

        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginTop="50dp"
        android:baselineAligned="false"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/boton_juego_reiniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/boton_juego_reiniciar"></Button>

        <Button
            android:id="@+id/boton_juego_salir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boton_juego_salir"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="-500dp"
        android:layout_height="-100dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/texto_puntuacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

</LinearLayout>